/* 共同成就空间：成长地图，蜿蜒向上的登山路径 */
.shared-container {
  min-height: 100vh;
  background: var(--theme-bg);
  display: flex;
  flex-direction: column;
  padding-bottom: env(safe-area-inset-bottom);
}

.shared-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 28rpx 24rpx;
  background: linear-gradient(180deg, var(--theme-primary-light) 0%, var(--theme-bg) 100%);
  border-bottom: 1rpx solid var(--theme-border);
}

.shared-header-left {
  flex: 1;
  min-width: 0;
}

.shared-title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: var(--theme-text);
  margin-bottom: 16rpx;
}

.shared-score-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.shared-score {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.shared-exchange-btn {
  flex-shrink: 0;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  line-height: 1.2;
  background: var(--theme-primary);
  color: var(--theme-text-on-primary);
  border-radius: var(--radius-pill);
  border: none;
}

.shared-exchange-btn::after {
  border: none;
}

.shared-header-avatars {
  display: flex;
  align-items: center;
  gap: 8rpx;
  flex-shrink: 0;
  margin-left: 20rpx;
}

.shared-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
}

.shared-avatar-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--theme-primary-light);
  border: 2rpx solid var(--theme-primary);
}

.shared-avatar-icon {
  font-size: 32rpx;
}

.shared-avatar-me {
  margin-left: -12rpx;
  border: 2rpx solid var(--theme-bg-card);
}

.shared-score-label {
  font-size: 24rpx;
  color: var(--theme-text-secondary);
}

.shared-score-value {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--theme-primary-dark);
}

/* 主体：左侧数据面板 + 右侧成长地图 */
.shared-body {
  flex: 1;
  display: flex;
  flex-direction: row;
  min-height: 0;
  overflow: hidden;
}

/* 左侧数据面板 */
.data-panel {
  width: 200rpx;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  padding: 24rpx 16rpx;
  background: var(--theme-bg-card);
  border-right: 1rpx solid var(--theme-border);
}

.data-panel-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 12rpx;
  margin-bottom: 16rpx;
  background: var(--theme-bg);
  border-radius: var(--radius-md);
  border: 2rpx solid var(--theme-border);
}

.data-panel-item-tappable {
  cursor: pointer;
}

.data-panel-value {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--theme-primary-dark);
  margin-bottom: 6rpx;
}

.data-panel-label {
  font-size: 22rpx;
  color: var(--theme-text-muted);
  text-align: center;
  line-height: 1.3;
}

.data-panel-badges {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-height: 0;
}

.data-panel-badges-title {
  font-size: 24rpx;
  font-weight: 600;
  color: var(--theme-text-secondary);
  margin-bottom: 16rpx;
  text-align: left;
  flex-shrink: 0;
}

.badge-wall-wrap {
  flex: 1;
  height: 0;
  min-height: 120rpx;
}

.badge-wall {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  justify-content: flex-start;
  padding-bottom: 24rpx;
}

/* 勋章项：当前用 badge-icon(emoji)；后期替换自绘勋章时加 .badge-img 样式，如 width/height 64rpx */
.badge-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 72rpx;
  padding: 12rpx 8rpx;
  background: var(--theme-primary-light);
  border-radius: var(--radius-sm);
  border: 2rpx solid var(--theme-primary);
}

.badge-icon {
  font-size: 36rpx;
  margin-bottom: 4rpx;
}

.badge-title {
  font-size: 20rpx;
  color: var(--theme-text);
  text-align: center;
  line-height: 1.2;
  word-break: break-all;
}

/* 成长地图：支持上下滑动查看历史节点 */
.growth-scroll {
  flex: 1;
  height: calc(100vh - 340rpx);
  min-width: 0;
}

.growth-map {
  position: relative;
  padding: 20rpx 24rpx 200rpx;
  min-height: 2400rpx;
  background: linear-gradient(180deg, #E8F4F8 0%, #D4E8E0 40%, #FDF6E8 100%);
}

/* 山体背景：远中近三层 */
.mountain-wrap {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  pointer-events: none;
  overflow: hidden;
  z-index: 0;
}

.mountain-layer {
  position: absolute;
  bottom: 0;
  left: -5%;
  width: 110%;
  height: 85%;
}

.mountain-far {
  background: linear-gradient(180deg, transparent 40%, rgba(139, 154, 107, 0.25) 70%, rgba(107, 128, 87, 0.35) 100%);
  clip-path: polygon(0 100%, 20% 55%, 40% 70%, 60% 45%, 80% 60%, 100% 100%);
}

.mountain-mid {
  background: linear-gradient(180deg, transparent 35%, rgba(101, 127, 83, 0.4) 65%, rgba(78, 98, 65, 0.5) 100%);
  clip-path: polygon(0 100%, 15% 60%, 35% 75%, 55% 50%, 75% 65%, 95% 55%, 100% 100%);
  height: 70%;
}

.mountain-near {
  background: linear-gradient(180deg, transparent 30%, rgba(85, 107, 70, 0.5) 60%, rgba(60, 80, 50, 0.65) 100%);
  clip-path: polygon(0 100%, 25% 65%, 50% 80%, 75% 55%, 100% 100%);
  height: 55%;
}

/* 节点间连线：每段连接相邻两节点圆心，由 buildPathSegments 计算 */
.path-segment {
  position: absolute;
  z-index: 1;
  width: 12rpx;
  margin-left: 0;
  background: linear-gradient(180deg, #D4B896 0%, #B89868 50%, #A08050 100%);
  border-radius: 6rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.12), inset 0 1rpx 0 rgba(255,255,255,0.2);
  transform-origin: top center;
  pointer-events: none;
}

/* 路径节点：蛇形左右交替，加大间距便于交互（参考双人情侣空间） */
.map-node {
  position: absolute;
  z-index: 2;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  width: 50%;
  padding: 24rpx 0;
  min-height: 160rpx;
}

.map-node-left {
  left: 0;
  padding-left: 16rpx;
  align-items: flex-start;
}

.map-node-right {
  right: 0;
  left: auto;
  padding-right: 16rpx;
  align-items: flex-end;
}

/* 节点圆点（突出于路径之上） */
.node-dot {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 5rpx solid var(--theme-border);
  margin-bottom: 12rpx;
  position: relative;
  z-index: 2;
}

.map-node.unlocked .node-dot {
  background: var(--theme-primary-light);
  border-color: var(--theme-primary);
  box-shadow: 0 4rpx 16rpx rgba(232, 163, 23, 0.4);
}

.map-node.locked {
  opacity: 0.5;
}

.map-node.locked .node-dot {
  background: var(--theme-bg-input);
  border-color: rgba(232, 220, 200, 0.5);
}

.node-icon {
  font-size: 40rpx;
}

/* 节点文字 */
.node-content {
  display: flex;
  flex-direction: column;
  align-items: inherit;
}

.map-node-right .node-content {
  align-items: flex-end;
}

.node-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--theme-text);
  margin-bottom: 4rpx;
}

.node-desc {
  font-size: 22rpx;
  color: var(--theme-text-muted);
}

.map-node.locked .node-title,
.map-node.locked .node-desc {
  color: rgba(122, 111, 92, 0.6);
}

/* 山顶：靠近屏幕顶部 */
/* 两匹马：站在当前/历史节点，后期可替换为用户上传图片 */
.horse-wrap {
  position: absolute;
  z-index: 3;
  display: flex;
  align-items: flex-end;
  gap: 8rpx;
  pointer-events: none;
}

.horse-left {
  left: 24rpx;
}

.horse-right {
  right: 24rpx;
  left: auto;
}

.horse-placeholder {
  font-size: 48rpx;
  line-height: 1;
}

.horse-img {
  width: 56rpx;
  height: 56rpx;
}

.horse-second {
  margin-left: 0;
}

.map-summit {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 48rpx;
  background: linear-gradient(180deg, var(--theme-primary-light) 0%, #FFF5E0 100%);
  border-radius: var(--radius-lg);
  border: 3rpx solid var(--theme-primary);
  box-shadow: 0 8rpx 24rpx rgba(232, 163, 23, 0.25);
  z-index: 2;
}

.map-summit.locked {
  opacity: 0.5;
  background: var(--theme-bg-input);
  border-color: rgba(232, 220, 200, 0.5);
  box-shadow: none;
}

.map-summit.locked .summit-text {
  color: rgba(122, 111, 92, 0.6);
}

.summit-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.summit-text {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--theme-primary-dark);
}

.shared-footer {
  padding: 20rpx 24rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: var(--theme-bg-card);
  border-top: 1rpx solid var(--theme-divider);
}

.shared-back-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(180deg, #F0B429 0%, var(--theme-primary-dark) 100%);
  color: var(--theme-text-on-primary);
  border-radius: var(--radius-pill);
  font-size: 32rpx;
  border: none;
  box-shadow: var(--shadow-btn);
}

.shared-back-btn::after {
  border: none;
}

/* 节点可点击：解锁节点添加点击态 */
.map-node.node-tappable,
.map-summit.node-tappable {
  cursor: pointer;
}

/* 节点留言弹窗 */
.message-modal-mask {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 100;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}

.message-modal {
  width: 100%;
  max-height: 70vh;
  background: var(--theme-bg);
  border-radius: 24rpx 24rpx 0 0;
  display: flex;
  flex-direction: column;
  padding-bottom: env(safe-area-inset-bottom);
}

.message-modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 24rpx 20rpx;
  border-bottom: 1rpx solid var(--theme-border);
}

.message-modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--theme-text);
}

.message-modal-close {
  font-size: 48rpx;
  color: var(--theme-text-muted);
  line-height: 1;
  padding: 0 16rpx;
}

.message-list-wrap {
  flex: 1;
  height: 300rpx;
  max-height: 50vh;
}

.message-list {
  padding: 24rpx;
}

.message-item {
  margin-bottom: 24rpx;
  padding: 20rpx 24rpx;
  border-radius: var(--radius-md);
  background: var(--theme-bg-card);
  border: 2rpx solid var(--theme-border);
}

.message-me {
  margin-left: 48rpx;
  background: var(--theme-primary-light);
  border-color: var(--theme-primary);
}

.message-partner {
  margin-right: 48rpx;
}

.message-author {
  display: block;
  font-size: 24rpx;
  color: var(--theme-primary-dark);
  margin-bottom: 8rpx;
}

.message-content {
  font-size: 28rpx;
  color: var(--theme-text);
  line-height: 1.5;
}

.message-time {
  display: block;
  font-size: 22rpx;
  color: var(--theme-text-muted);
  margin-top: 8rpx;
}

.message-empty {
  padding: 48rpx 24rpx;
  text-align: center;
  font-size: 28rpx;
  color: var(--theme-text-muted);
}

.message-input-bar {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx 24rpx;
  border-top: 1rpx solid var(--theme-border);
  background: var(--theme-bg);
}

.message-input {
  flex: 1;
  padding: 20rpx 24rpx;
  background: var(--theme-bg-input);
  border: 2rpx solid var(--theme-border);
  border-radius: var(--radius-md);
  font-size: 28rpx;
}

.message-send-btn {
  padding: 20rpx 32rpx;
  font-size: 28rpx;
  background: var(--theme-primary);
  color: var(--theme-text-on-primary);
  border-radius: var(--radius-md);
  border: none;
}

.message-send-btn::after {
  border: none;
}

/* 共同运动历史弹窗 */
.activity-history-modal .message-list-wrap {
  min-height: 200rpx;
}

.activity-history-list {
  padding: 24rpx;
}

.activity-history-item {
  padding: 24rpx;
  margin-bottom: 16rpx;
  background: var(--theme-bg-card);
  border-radius: var(--radius-md);
  border: 2rpx solid var(--theme-border);
}

.activity-history-main {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-bottom: 12rpx;
}

.activity-history-date {
  font-size: 24rpx;
  color: var(--theme-text-muted);
}

.activity-history-activity {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--theme-text);
}

.activity-history-extra {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex-wrap: wrap;
}

.activity-history-duration {
  font-size: 26rpx;
  color: var(--theme-primary-dark);
}

.activity-history-node {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  background: var(--theme-primary-light);
  color: var(--theme-primary-dark);
  border-radius: var(--radius-sm);
}
