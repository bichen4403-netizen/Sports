<view class="container">
  <view class="header-section">
    <view class="icon-check">✓</view>
    <view class="title">活动圆满结束</view>
    <view class="subtitle">你们合作得很棒！</view>
  </view>

  <view class="stats-card">
    <view class="card-title">本局收益</view>
    <view class="stats-grid">
      <view class="stat-item">
        <text class="val">+15</text>
        <text class="label">信用值</text>
      </view>
      <view class="stat-item">
        <text class="val">+50</text>
        <text class="label">成就值</text>
      </view>
      <view class="stat-item">
        <text class="val">1.5h</text>
        <text class="label">运动时长</text>
      </view>
    </view>
  </view>

  <view class="partner-section">
    <view class="section-header">
      <text class="section-title">队友评价</text>
      <text class="section-desc">双向确认即可成为固定伙伴</text>
    </view>

    <view class="teammate-list">
      <block wx:for="{{teammates}}" wx:key="id">
        <view class="teammate-row">
          <image class="avatar" src="{{item.avatar}}"></image>
          <view class="info">
            <view class="name">{{item.nickname}}</view>
            <view class="tag">{{item.tag}}</view>
          </view>
          
          <view class="action-box">
            <view 
              class="action-btn {{item.selected ? 'active' : ''}}" 
              bindtap="togglePartner" 
              data-index="{{index}}">
              {{item.selected ? '已邀请' : '加为伙伴'}}
            </view>
          </view>
        </view>
      </block>
    </view>
  </view>

  <view class="footer">
    <button class="confirm-btn" bindtap="submitSettle">确认并退出</button>
  </view>
</view>