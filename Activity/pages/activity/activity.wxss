/* activity.wxss */
page {
    background-color: #F4F5F9;
    height: 100vh;
    display: flex;
    flex-direction: column;
  }

  
  .header-section {
    background: #fff;
    padding-bottom: 20rpx;
    z-index: 100;
  }
  
  .search-box {
    margin: 20rpx 30rpx;
    background: #F0F2F5;
    height: 72rpx;
    border-radius: 36rpx;
    display: flex;
    align-items: center;
    padding: 0 24rpx;
  }
  .search-box input { flex: 1; margin-left: 10rpx; font-size: 28rpx; }
  
  
  /* 运动类型筛选样式 */
  .sport-scroll {
    white-space: nowrap;
    height: 60rpx;
    padding-left: 30rpx;
  }
  .sport-row { display: flex; align-items: center; }
  .sport-chip {
    padding: 10rpx 30rpx;
    background: #F5F6F8;
    color: #666;
    border-radius: 30rpx;
    font-size: 26rpx;
    margin-right: 16rpx;
    transition: all 0.2s;
    box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  }
  .sport-chip:hover {
    background: #E8E9EC;
  }
  .sport-chip.active {
    background: #222; /* 黑色高亮，酷一点 */
    color: #fff;
    font-weight: 600;
    box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.15);
  }
  .more-chip {
    display: flex;
    align-items: center;
    gap: 4rpx;
  }
  
  /* 半屏弹窗样式 */
  .modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 998;
    animation: fadeIn 0.3s ease;
  }
  
  .sports-modal {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: #fff;
    border-radius: 32rpx 32rpx 0 0;
    height: 60vh;
    max-height: 600rpx;
    z-index: 999;
    box-shadow: 0 -8rpx 32rpx rgba(0, 0, 0, 0.15);
    animation: slideUp 0.3s ease;
    display: flex;
    flex-direction: column;
  }
  
  .modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 24rpx 32rpx;
    border-bottom: 1px solid #F0F0F0;
  }
  
  .modal-title {
    font-size: 32rpx;
    font-weight: 600;
    color: #333;
  }
  
  .close-btn {
    width: 48rpx;
    height: 48rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    transition: background-color 0.2s;
  }
  
  .close-btn:hover {
    background: #F5F6F8;
  }
  
  .modal-content {
    flex: 1;
    padding: 32rpx;
    overflow-y: auto;
  }
  
  .sport-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 20rpx;
  }
  
  .grid-chip {
    margin-right: 0;
    flex-shrink: 0;
    padding: 12rpx 36rpx;
    font-size: 28rpx;
  }
  
  /* 动画效果 */
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
  
  @keyframes slideUp {
    from { transform: translateY(100%); }
    to { transform: translateY(0); }
  }
  
  /* 排序选项样式 */
  .sort-options {
    display: flex;
    justify-content: space-around;
    background: #fff;
    padding: 20rpx 0;
    border-bottom: 1px solid #F0F0F0;
  }
  .sort-item {
    font-size: 26rpx;
    color: #666;
    padding: 8rpx 24rpx;
    border-radius: 20rpx;
    transition: all 0.2s;
  }
  .sort-item:hover {
    background: #F5F6F8;
  }
  .sort-item.active {
    color: #222;
    font-weight: 600;
    background: #F5F6F8;
  }
  
  /* 列表区域 */
  .main-scroll {
    flex: 1;
    padding-top: 20rpx;
    background: linear-gradient(135deg, #F4F5F9 0%, #E9ECF3 100%);
  }
  
  .activity-list {
    padding: 0 30rpx;
  }
  
  .activity-card {
    background: #fff;
    border-radius: 24rpx;
    margin-bottom: 28rpx;
    display: flex; /* 改为左图右文结构，更适合展示 */
    padding: 24rpx;
    box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.08);
    transition: all 0.3s ease;
    border: 1px solid #F5F6F8;
  }
  
  .activity-card:hover {
    transform: translateY(-4rpx);
    box-shadow: 0 12rpx 40rpx rgba(0,0,0,0.12);
  }
  
  .card-img-box {
    position: relative;
    width: 220rpx;
    height: 220rpx;
    border-radius: 20rpx;
    overflow: hidden;
    margin-right: 28rpx;
    flex-shrink: 0;
    box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.1);
  }
  
  .card-img {
    width: 100%; 
    height: 100%;
    transition: transform 0.3s ease;
  }
  
  .activity-card:hover .card-img {
    transform: scale(1.05);
  }
  
  .status-badge {
    position: absolute;
    top: 12rpx; 
    left: 12rpx;
    background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
    color: #fff;
    font-size: 20rpx;
    padding: 6rpx 16rpx;
    border-radius: 20rpx;
    font-weight: 600;
    box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.3);
  }

  .status-badge.ongoing {
    background: #3B82F6;
    box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
  }

  .status-badge.finished {
    background: #9CA3AF;
    box-shadow: 0 4rpx 12rpx rgba(156, 163, 175, 0.3);
  }
  
  .card-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  
  .card-title {
    font-size: 32rpx;
    font-weight: 700;
    color: #222;
    margin-bottom: 12rpx;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    line-height: 44rpx;
  }
  
  .info-row {
    display: flex;
    align-items: center;
    margin-bottom: 8rpx;
    gap: 12rpx;
  }
  .info-text {
    font-size: 26rpx;
    color: #666;
    line-height: 36rpx;
  }
  
  /* 底部发起人和报名按钮优化 */
  .card-bottom {
    margin-top: 20rpx;
    padding-top: 20rpx;
    border-top: 1px solid #F5F6F8;
  }
  
  .card-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 10rpx;
  }
  
  .host-info {
    display: flex;
    align-items: center;
  }
  .avatar-sm {
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    margin-right: 10rpx;
    background: #eee;
  }
  .host-name { font-size: 22rpx; color: #666; }
  
  .join-btn-sm {
    background: linear-gradient(135deg, #222 0%, #444 100%);
    color: #fff;
    font-size: 26rpx;
    padding: 12rpx 32rpx;
    border-radius: 36rpx;
    font-weight: 600;
    transition: all 0.3s ease;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
  }

  .join-btn-sm.disabled {
    background: #F0F2F5;
    color: #999;
    box-shadow: none;
  }
  
  .join-btn-sm:hover {
    background: linear-gradient(135deg, #444 0%, #666 100%);
    transform: translateY(-2rpx);
    box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.2);
  }
  
  /* 底部悬浮按钮 */
  .fab-create {
    position: fixed;
    bottom: 60rpx;
    left: 50%;
    transform: translateX(-50%);
    background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
    color: #fff;
    display: flex;
    align-items: center;
    padding: 28rpx 56rpx;
    border-radius: 100rpx;
    box-shadow: 0 12rpx 40rpx rgba(255, 107, 107, 0.35);
    z-index: 200;
    transition: all 0.3s ease;
    font-weight: 600;
  }
  
  .fab-create:hover {
    transform: translateX(-50%) translateY(-4rpx);
    box-shadow: 0 16rpx 50rpx rgba(255, 107, 107, 0.45);
  }
  
  .plus-icon {
    font-size: 44rpx;
    line-height: 36rpx;
    margin-right: 16rpx;
    font-weight: 300;
  }
  
  .empty-state {
    text-align: center;
    color: #999;
    margin-top: 100rpx;
    font-size: 28rpx;
  }