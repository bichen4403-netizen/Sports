page {
    background: #F7F8FA;
    padding-bottom: 120rpx;
  }
  
  .container {
    padding: 30rpx;
  }
  
  .form-group {
    background: #fff;
    border-radius: 24rpx;
    padding: 30rpx;
    margin-bottom: 24rpx;
  }
  
  .section-title {
    font-size: 32rpx;
    font-weight: 600;
    margin-bottom: 30rpx;
    color: #333;
  }
  
  .input-item {
    display: flex;
    align-items: center;
    padding: 24rpx 0;
    border-bottom: 1rpx solid #f5f5f5;
  }
  
  .input-item:last-child { border-bottom: none; }
  
  .label {
    width: 160rpx;
    font-size: 28rpx;
    color: #666;
  }
  
  input {
    flex: 1;
    font-size: 28rpx;
    color: #333;
  }
  
  .picker-val {
    flex: 1;
    font-size: 28rpx;
    color: #333;
    display: flex;
    justify-content: space-between;
  }
  .picker-val.placeholder { color: #ccc; }
  .arrow { color: #ccc; }
  
  /* 单选胶囊 */
  .radio-group { display: flex; }
  .radio-pill {
    padding: 10rpx 30rpx;
    background: #f5f5f5;
    color: #666;
    border-radius: 30rpx;
    font-size: 26rpx;
    margin-right: 20rpx;
    border: 2rpx solid transparent;
  }
  .radio-pill.active {
    background: #E8F3FF;
    color: #0066FF;
    border-color: #0066FF;
  }
  
  /* 图片上传 */
  .upload-area {
    width: 100%;
    height: 300rpx;
    background: #F9FAFC;
    border-radius: 16rpx;
    margin-bottom: 30rpx;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2rpx dashed #ddd;
    transition: all 0.3s ease;
  }
  
  .upload-area:hover {
    border-color: #07c160;
    background: #F0FFF8;
  }
  
  .upload-placeholder {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #999;
    font-size: 26rpx;
  }
  .icon-camera { font-size: 50rpx; margin-bottom: 10rpx; color: #999; }
  
  /* 相关图片样式 */
  .related-images {
    display: flex;
    flex-wrap: wrap;
    gap: 20rpx;
    margin-bottom: 30rpx;
  }
  
  .related-image-item {
    position: relative;
    width: 160rpx;
    height: 160rpx;
    border-radius: 16rpx;
    overflow: hidden;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  }
  
  .related-image {
    width: 100%;
    height: 100%;
  }
  
  .delete-btn {
    position: absolute;
    top: 8rpx;
    right: 8rpx;
    width: 36rpx;
    height: 36rpx;
    background: rgba(0, 0, 0, 0.7);
    color: #fff;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
    font-weight: bold;
    transition: all 0.2s ease;
  }
  
  .delete-btn:hover {
    background: rgba(255, 0, 0, 0.9);
  }
  
  .add-image-btn {
    width: 160rpx;
    height: 160rpx;
    background: #F9FAFC;
    border: 2rpx dashed #ddd;
    border-radius: 16rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }
  
  .add-image-btn:hover {
    border-color: #07c160;
    background: #F0FFF8;
  }
  
  .add-image-btn .icon-camera {
    font-size: 40rpx;
    margin-bottom: 0;
    color: #666;
  }
  
  /* 活动标签样式 */
  .tags-section {
    flex-direction: column;
    align-items: flex-start;
    padding-bottom: 24rpx;
    border-bottom: none;
  }
  
  .tags-selector {
    display: flex;
    flex-wrap: wrap;
    gap: 20rpx;
    width: 100%;
    padding-top: 16rpx;
  }
  
  /* 未选中状态 - 灰白色 */
  .tag-item {
    padding: 10rpx 30rpx !important;
    background-color: #e9e9e9 !important;
    color: #666 !important;
    border-radius: 30rpx !important;
    font-size: 26rpx !important;
    margin-right: 20rpx !important;
    border: 2rpx solid #d4d4d4 !important;
    transition: all 0.2s ease !important;
  }
  
  /* 选中状态 - 蓝色 */
  .tag-item.active {
    background-color: #E8F3FF !important;
    color: #0066FF !important;
    border-color: #0066FF !important;
  }
  
  .preview-img { width: 100%; height: 100%; }
  
  .desc-input {
    width: 100%;
    height: 200rpx;
    font-size: 28rpx;
    line-height: 1.6;
  }
  
  /* 极简标签样式 */
  .tag-container {
    display: flex;
    flex-wrap: wrap;
    gap: 20rpx;
    width: 100%;
    padding-top: 16rpx;
  }
  
  /* 未选中状态 - 灰白色 */
  .tag-gray {
    padding: 10rpx 30rpx;
    background-color: #f0f0f0;
    color: #666;
    border-radius: 30rpx;
    font-size: 26rpx;
    margin-right: 20rpx;
    border: 2rpx solid #e0e0e0;
    transition: all 0.2s ease;
  }
  
  /* 选中状态 - 蓝色 */
  .tag-blue {
    padding: 10rpx 30rpx;
    background-color: #E8F3FF;
    color: #0066FF;
    border-radius: 30rpx;
    font-size: 26rpx;
    margin-right: 20rpx;
    border: 2rpx solid #0066FF;
    transition: all 0.2s ease;
  }
  
  /* 底部按钮 */
  .footer-bar {
    position: fixed;
    bottom: 0; left: 0; right: 0;
    background: #fff;
    padding: 20rpx 30rpx;
    padding-bottom: env(safe-area-inset-bottom);
    box-shadow: 0 -4rpx 10rpx rgba(0,0,0,0.05);
  }
  
  .submit-btn {
    background: #222;
    color: #fff;
    border-radius: 50rpx;
    font-size: 32rpx;
    font-weight: 500;
  }