page {
    background-color: #F7F8FA;
    padding-bottom: 120rpx; /* 为底部按钮留空 */
  }
  
  /* Hero Header */
  .hero {
    position: relative;
    width: 100%;
    height: 420rpx;
  }
  
  .banner {
    width: 100%;
    height: 100%;
  }
  
  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to bottom, rgba(0,0,0,0) 60%, rgba(0,0,0,0.6));
  }
  
  .status-tag {
    position: absolute;
    right: 24rpx;
    top: 24rpx;
    background: #22C55E;
    color: #fff;
    padding: 8rpx 20rpx;
    border-radius: 24rpx;
    font-size: 24rpx;
    font-weight: 600;
  }
  
  /* 内容主体上移，覆盖图片底部 */
  .content-body {
    position: relative;
    margin-top: -40rpx;
    padding: 0 24rpx;
    z-index: 10;
  }
  
  .header-card {
    background: #fff;
    border-radius: 24rpx;
    padding: 32rpx;
    box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
    margin-bottom: 24rpx;
  }
  
  .title {
    font-size: 40rpx;
    font-weight: 800;
    color: #222;
    margin-bottom: 16rpx;
  }
  
  .tags {
    display: flex;
  }
  
  .tag {
    background: #F0F2F5;
    color: #666;
    font-size: 22rpx;
    padding: 6rpx 16rpx;
    border-radius: 8rpx;
    margin-right: 12rpx;
  }
  
  /* 信息区 */
  .info-section {
    background: #fff;
    border-radius: 24rpx;
    padding: 10rpx 32rpx;
    margin-bottom: 24rpx;
  }
  
  .info-row {
    display: flex;
    align-items: flex-start;
    padding: 24rpx 0;
    border-bottom: 1rpx solid #f5f5f5;
  }
  
  .info-row:last-child {
    border-bottom: none;
  }
  
  .icon-box {
    width: 60rpx;
    font-size: 32rpx;
  }
  
  .label {
    font-size: 24rpx;
    color: #999;
    margin-bottom: 4rpx;
  }
  
  .val {
    font-size: 30rpx;
    color: #222;
    font-weight: 500;
  }
  
  .sub {
    font-size: 22rpx;
    color: #999;
    margin-top: 4rpx;
  }
  
  /* 描述区 */
  .desc-section {
    background: #fff;
    border-radius: 24rpx;
    padding: 32rpx;
    margin-bottom: 24rpx;
  }
  
  .section-title {
    font-size: 30rpx;
    font-weight: 700;
    margin-bottom: 20rpx;
    padding-left: 16rpx;
    border-left: 8rpx solid #222;
  }
  
  .desc-text {
    font-size: 28rpx;
    color: #444;
    line-height: 1.8;
    white-space: pre-wrap;
  }
  
  /* 发起者 */
  .host-card {
    background: #fff;
    border-radius: 24rpx;
    padding: 24rpx 32rpx;
    display: flex;
    align-items: center;
  }
  
  .avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    margin-right: 20rpx;
    background: #eee;
  }
  
  .host-info {
    flex: 1;
  }
  
  .name {
    font-size: 30rpx;
    font-weight: 600;
  }
  
  .role {
    font-size: 22rpx;
    color: #999;
  }
  
  .contact-btn {
    margin: 0;
    border-radius: 24rpx;
    background: #F5F6F8;
    color: #333;
  }
  
  /* 底部操作栏 */
  .bottom-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: #fff;
    padding: 20rpx 32rpx 40rpx 32rpx; /* 适配 iPhone X */
    box-shadow: 0 -4rpx 16rpx rgba(0,0,0,0.05);
    display: flex;
    align-items: center;
    z-index: 99;
  }
  
  .share-btn {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: none;
    font-size: 20rpx;
    color: #666;
    margin-right: 24rpx;
    line-height: 1.2;
  }
  .share-btn::after { border: none; }
  
  .join-btn {
    flex: 1;
    background: #222;
    color: #fff;
    border-radius: 40rpx;
    font-size: 30rpx;
    font-weight: 600;
    height: 80rpx;
    line-height: 80rpx;
    margin: 0;
  }

  .join-btn::after {
    border: none;
  }

  /* 相关图片样式 */
  .related-images-section {
    background: #fff;
    border-radius: 24rpx;
    padding: 32rpx;
    margin-bottom: 24rpx;
  }

  .related-images-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 16rpx;
  }

  .related-image {
    width: 100%;
    height: 220rpx;
    border-radius: 12rpx;
    object-fit: cover;
  }

  /* 联系信息样式 */
  .contact-info {
    margin-top: 8rpx;
    font-size: 24rpx;
    color: #666;
    cursor: pointer;
  }
  
  .contact-info:active {
    background-color: #f5f5f5;
  }
  
  .contact-value {
    display: inline-block;
    color: #333;
    text-decoration: underline;
  }

  .contact-label {
    display: inline-block;
    margin-right: 8rpx;
    color: #999;
  }

  .contact-value {
    display: inline-block;
    color: #333;
  }

/* 状态标签颜色 */
.status-tag.ongoing { background: #3B82F6; } /* 蓝色 */
.status-tag.finished { background: #9CA3AF; } /* 灰色 */

/* 按钮样式变体 */
.join-btn.disabled {
  background: #F0F2F5;
  color: #999;
}
.join-btn.finish-style {
  background: #EF4444; /* 红色，醒目 */
  color: white;
}
.join-btn.settle-style {
  background: #10B981; /* 绿色，代表完成 */
  color: white;
}